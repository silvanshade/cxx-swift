{
  "image": "silvanshade/cxx-swift-dev",
  "customizations": {
    "vscode": {
      "extensions": [
        "aaron-bond.better-comments",
        "DavidAnson.vscode-markdownlint",
        "EditorConfig.EditorConfig",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cpptools",
        "rust-lang.rust-analyzer",
        "stkb.rewrap",
        "tamasfe.even-better-toml",
        "vadimcn.vscode-lldb"
      ]
    }
  },
  "workspaceFolder": "/workspaces/cxx-swift",
  "mounts": ["target=${containerWorkspaceFolder}/target,type=volume"],
  "postCreateCommand": "sudo chown -R rust-user:rust-user ${containerWorkspaceFolder}/target && mv ${containerWorkspaceFolder}/../cxx-swift-target-cooked/* ${containerWorkspaceFolder}/target/ && mv ${containerWorkspaceFolder}/../cxx-swift-target-cooked/.rustc_info.json ${containerWorkspaceFolder}/target/"
}
